void MainWindow::sqrtslot()
{
    QString k=res->text();
    if(k.length()==0)
    {
        res->setText("0");
        return;
    }
    QString resl=calculate(k);
    if(resl=="ERROR" || k.isEmpty())
    {
        res->setText("ERROR");
        return;
    }
    double d=resl.toDouble();
    res->setText(QString::number(sqrt(d),'f',4));
}

