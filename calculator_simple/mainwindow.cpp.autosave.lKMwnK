void MainWindow::newcalc()
{
    tab->setRowCount(prks.size());
    for(int i=0;i<tab->rowCount();i++)
    {
        QTableWidgetItem *it=new QTableWidgetItem;
        it->setText(prks.at(i).time);
        it->setTextAlignment(Qt::AlignCenter);
